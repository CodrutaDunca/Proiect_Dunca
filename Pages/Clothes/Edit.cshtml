@page
@model Proiect_Dunca.Pages.Clothes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Clothe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Clothe.ID" />
            <div class="form-group">
                <label asp-for="Clothe.Brand" class="control-label"></label>
                <input asp-for="Clothe.Brand" class="form-control" />
                <span asp-validation-for="Clothe.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clothe.Type" class="control-label"></label>
                <input asp-for="Clothe.Type" class="form-control" />
                <span asp-validation-for="Clothe.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clothe.Price" class="control-label"></label>
                <input asp-for="Clothe.Price" class="form-control" />
                <span asp-validation-for="Clothe.Price" class="text-danger"></span>

            </div>
            <label asp-for="Clothe.DesignerID" class="control-label">Designer Name</label>
            <select asp-for="Clothe.DesignerID" class="form-control" asp-items="ViewBag.DesignerID">
            </select>
            <span asp-validation-for="Clothe.DesignerID" class="text-danger"></span>

            <label asp-for="Clothe.CategoryID" class="control-label">Catogry Name</label>
            <select asp-for="Clothe.CategoryID" class="form-control" asp-items="ViewBag.CategoryID">
            </select>
            <span asp-validation-for="Clothe.CategoryID" class="text-danger"></span>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
